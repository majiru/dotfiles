! ------------------------------------------------------------------------------
! ! ROFI Color theme
! ! ------------------------------------------------------------------------------
! ! Use extended color scheme
 rofi.color-enabled:                  true
! ! Color scheme for normal row
 rofi.color-normal:                   #ffffe7,  #303030 , #ffffe7,  #dcf0f8, #303030
! ! Color scheme for urgent row
 rofi.color-urgent:                   #ffffe7,  #F99157 , #ffffe7,  #F99157 ,  #1B2B34
! ! Color scheme for active row
 rofi.color-active:                   #303030,  #6699CC , #303030,  #6699CC ,  #1B2B34
! ! Color scheme window
 rofi.color-window:                   #ffffe7,  #DCF0F8 ,  #DCF0F8
! ! Separator style (none, dash, solid)
 rofi.separator-style:                solid
